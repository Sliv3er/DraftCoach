{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../../shared/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "../../shared/**/*.ts"]
}
